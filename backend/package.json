{
  "name": "transcription-app-backend",
  "version": "1.0.0",
  "description": "Backend serverless para plataforma de transcripciones de audio",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "sls offline start",
    "deploy": "sls deploy",
    "deploy:dev": "sls deploy --stage dev",
    "deploy:prod": "sls deploy --stage prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.470.0",
    "@aws-sdk/client-dynamodb": "^3.470.0",
    "@aws-sdk/client-s3": "^3.470.0",
    "@aws-sdk/lib-dynamodb": "^3.470.0",
    "@aws-sdk/s3-request-presigner": "^3.850.0",
    "@types/form-data": "^2.2.1",
    "aws-lambda": "^1.0.7",
    "axios": "^1.10.0",
    "form-data": "^4.0.4",
    "joi": "^17.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "serverless": "^3.37.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.48.1",
    "serverless-offline": "^13.3.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
